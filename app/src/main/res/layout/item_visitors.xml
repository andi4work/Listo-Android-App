<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/cardview_default_elevation"
    android:paddingLeft="@dimen/cardview_default_elevation"
    android:paddingRight="@dimen/cardview_default_elevation"
    android:paddingTop="@dimen/cardview_default_elevation">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivCompanyLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:padding="8dp"
            android:src="@drawable/versha_group_icon" />


        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivCompanyLogo"
            android:layout_toLeftOf="@+id/ivNavigation"
            android:layout_toRightOf="@+id/ivCompanyLogo"
            android:layout_toStartOf="@+id/ivNavigation"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/title_name"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/ivCompanyLogo"
            android:layout_toLeftOf="@+id/ivNavigation"
            android:layout_toRightOf="@+id/ivCompanyLogo"
            android:layout_toStartOf="@+id/ivNavigation"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="Varsha Multi-Tech
"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDateTitle"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNotification"
            android:layout_toEndOf="@+id/ivCompanyLogo"
            android:layout_toRightOf="@+id/ivCompanyLogo"
            android:text="@string/date"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNotification"
            android:layout_toEndOf="@+id/tvDateTitle"
            android:layout_toRightOf="@+id/tvDateTitle"
            android:text="31/01/2017"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/tvTimeTitle"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDateTitle"
            android:layout_toRightOf="@+id/ivCompanyLogo"
            android:text="@string/time"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDateTitle"
            android:layout_toEndOf="@+id/tvTimeTitle"
            android:layout_toRightOf="@+id/tvTimeTitle"
            android:text="12:10"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/ivNavigation"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom|right"
            android:layout_toLeftOf="@+id/indicator"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/ic_navigaiton"></ImageView>

        <TextView
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivCompanyLogo"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/ivNavigation"
            android:drawableRight="@drawable/list_expand_right"
            android:paddingRight="10dp" />

        <ImageView
            android:id="@+id/ivVertical"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@+id/tvNotification"
            android:layout_gravity="bottom|right"
            android:layout_toLeftOf="@+id/indicator"
            android:layout_toStartOf="@+id/indicator"
            android:src="@drawable/listo_orange_action_item"></ImageView>

    </RelativeLayout>
</android.support.v7.widget.CardView></LinearLayout>