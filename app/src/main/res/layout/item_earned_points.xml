<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/cardview_default_elevation"
    android:paddingLeft="@dimen/cardview_default_elevation"
    android:paddingRight="@dimen/cardview_default_elevation"
    android:paddingTop="@dimen/cardview_default_elevation">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCompanyLogo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:src="@drawable/versha_group_icon" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/ivCompanyLogo"
                android:layout_toLeftOf="@+id/ivDirection"
                android:layout_toRightOf="@+id/ivCompanyLogo"
                android:layout_toStartOf="@+id/ivDirection"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Versha Group"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNotification"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/ivCompanyLogo"
                android:layout_toLeftOf="@+id/ivDirection"
                android:layout_toRightOf="@+id/ivCompanyLogo"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:text="@string/points"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tvPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/tvNotification"
                android:layout_toLeftOf="@+id/ivDirection"
                android:layout_toRightOf="@+id/ivCompanyLogo"
                android:layout_toStartOf="@+id/ivDirection"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:text="100"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tvAmountTitle"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNotification"
                android:layout_toEndOf="@+id/ivCompanyLogo"
                android:layout_toLeftOf="@+id/ivDirection"
                android:layout_toRightOf="@+id/ivCompanyLogo"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/amount"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNotification"
                android:layout_toEndOf="@+id/tvAmountTitle"
                android:layout_toLeftOf="@+id/ivDirection"
                android:layout_toRightOf="@+id/tvAmountTitle"
                android:layout_toStartOf="@+id/ivDirection"
                android:fontFamily="sans-serif-condensed"
                android:text="10.56"
                android:textSize="10dp" />


            <TextView
                android:id="@+id/tvDataAndTimeTitle"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAmountTitle"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/ivCompanyLogo"
                android:layout_toRightOf="@+id/ivCompanyLogo"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:text="@string/date"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvDataAndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAmountTitle"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/tvDataAndTimeTitle"
                android:layout_toLeftOf="@+id/ivDirection"
                android:layout_toRightOf="@+id/tvDataAndTimeTitle"
                android:layout_toStartOf="@+id/ivDirection"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:text="@string/date_and_time"
                android:textSize="12sp" />


            <ImageView
                android:id="@+id/ivDirection"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="20dp"
                android:src="@drawable/ic_navigaiton" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>